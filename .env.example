############################################
# APP CONFIG
############################################
APP_NAME=QuantForge AI Engine
APP_VERSION=0.1.0
ENVIRONMENT=development
LOG_LEVEL=INFO


############################################
# POSTGRES (NeonDB Cloud)
############################################
# Get from: https://console.neon.tech → Your Project → Connection Details
# Format: postgresql://[user]:[password]@[host].neon.tech/[database]?sslmode=require
DATABASE_URL=postgresql://USERNAME:PASSWORD@HOST.neon.tech/dbname?sslmode=require


############################################
# REDIS (Local Docker)
############################################
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0


############################################
# MINIO (Local Docker)
############################################
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=False
MINIO_BUCKET=quantforge-data


############################################
# WEAVIATE (Cloud)
############################################
# Get from: https://console.weaviate.cloud → Your Cluster → Details
# Endpoint format: cluster-id.c0.region.gcp.weaviate.cloud (no https://)
WEAVIATE_ENDPOINT=YOUR_CLUSTER_ID.c0.region.gcp.weaviate.cloud
WEAVIATE_API_KEY=YOUR_WEAVIATE_API_KEY


############################################
# EMBEDDINGS - HYBRID ENGINE
############################################
# Primary backend: "huggingface" or "ollama"
EMBEDDING_BACKEND=huggingface

# HuggingFace Inference API
# Get API key from: https://huggingface.co/settings/tokens
HF_API_KEY=hf_YOUR_API_KEY_HERE
HF_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
HF_INFERENCE_API=https://router.huggingface.co/hf-inference

# Ollama (Local Fallback - Optional)
OLLAMA_URL=http://localhost:11434
OLLAMA_EMBED_MODEL=nomic-embed-text


############################################
# LLM PROVIDERS - CHAT/ANALYSIS
############################################
# Hugging Face Inference (FREE - Primary for Phase 1.4)
# Uses same HF_API_KEY from embeddings section above
# Free tier: 30k characters/day
HF_LLM_MODEL=mistralai/Mistral-7B-Instruct-v0.2
HF_LLM_ENDPOINT=https://api-inference.huggingface.co/models

# OpenAI (Paid Fallback - Optional)
# Get from: https://platform.openai.com/api-keys
# Cost: ~$0.50 per 1M tokens (GPT-3.5-turbo)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Ollama (Local Free Fallback)
# Install: https://ollama.com/download
OLLAMA_LLM_MODEL=llama3.2:3b


############################################
# AUTHENTICATION - CLERK
############################################
# Get from: https://dashboard.clerk.com/ → Your App → API Keys
# Free tier: 10,000 monthly active users
CLERK_SECRET_KEY=sk_test_YOUR_SECRET_KEY
CLERK_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY
CLERK_JWT_KEY=


############################################
# ERROR TRACKING - SENTRY
############################################
# Get from: https://sentry.io/ → Create Project → DSN
# Free tier: 5,000 errors/month
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1


############################################
# PAYMENTS - STRIPE (Phase 1.5)
############################################
# Get from: https://dashboard.stripe.com/apikeys
# No monthly fee, only 2.9% + $0.30 per transaction
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=


############################################
# SECURITY
############################################
# For production, set strong secrets
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production


############################################
# CORS (Development)
############################################
ALLOWED_ORIGINS=["*"]


############################################
# OTHER
############################################
PYTHONPATH=
